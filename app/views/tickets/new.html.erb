<div class="card mb-3">
<div class="card-body">
<h2>Create a Ticket</h2>
    <%= form_for @ticket do |f| %>
      <% if @ticket.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @ticket.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <div class="field col-6">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class: 'form-control' %>
  </div>

  <div class="field col-6">
    <%= f.label :priority %><br />
    <%= f.select :priority, [['Select Priority', nil], ['urgent', 'urgent'], ['high', 'high'], ['normal', 'normal'], ['low', 'low']], {}, class: 'form-control' %>
  </div>

  <div class="field col-6">
    <%= f.label :description %><br />
    <%= f.text_field :description, autofocus: true, autocomplete: "description", class: 'form-control' %>
  </div>

  <div class="field col-6">
    <%= f.label :tags %><br />
    <%= f.text_field :tags, autofocus: true, autocomplete: "tags", class: 'form-control' %>
  </div>

  <div class="text mt-3">
  <%= f.submit "Create Ticket", class: 'btn btn-success' %>
  </div>
<% end %>

</div>
</div>