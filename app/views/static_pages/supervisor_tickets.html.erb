<div class="container">
  <div class="card mb-4">
    <div class="card-body">
      <div class="text-center">
      <%= link_to 'Order by Priority', supervisor_tickets_path(order_by: 'priority'), class: "btn btn-light mb-3" %>
      <%= link_to 'Order by Last Comment', supervisor_tickets_path(order_by: 'last_comment'), class: "btn btn-light mb-3" %>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Title</th>
              <th>Priority</th>
              <th>Term At</th>
            </tr>
          </thead>
          <tbody>
            <% @tickets.each do |ticket| %>
              <tr>
                <td><%= ticket.title %></td>
                <td><%= ticket.priority %></td>
                <td><%= ticket.term_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>