<h1 class="mt-4">User Roles</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.role.capitalize %></td>
          <td>
            <%= button_to 'Change Role', update_role_path(user), method: :patch, data: { confirm: 'Are you sure you want to change the role?' }, class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>